{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"shell:allow-open",
		"sql:default",
		"sql:allow-load",
		"sql:allow-execute",
		"sql:allow-select",
		"sql:allow-close",
		"store:default",
		"store:allow-get",
		"store:allow-set",
		"store:allow-save",
		"store:allow-load",
		"fs:default",
		"dialog:allow-confirm",
		"dialog:default",
		{
			"identifier": "fs:scope",
			"allow": [
				{
					"path": "$APPDATA"
				},
				{
					"path": "$APPDATA/**"
				}
			]
		},
		{
			"identifier": "fs:read-all",
			"allow": [
				{
					"path": "**"
				}
			]
		},
		"fs:allow-exists",
		{
			"identifier": "fs:allow-mkdir",
			"allow": [
				{
					"path": "**"
				}
			]
		},
		{
			"identifier": "fs:write-files",
			"allow": [
				{
					"path": "**"
				}
			]
		},
		{
			"identifier": "fs:read-dirs",
			"allow": [
				{
					"path": "**"
				}
			]
		},
		{
			"identifier": "fs:read-files",
			"allow": [
				{
					"path": "**"
				}
			]
		},
		"fs:write-all",
		"opener:default",
		"http:default",
		{
			"identifier": "http:allow-fetch",
			"allow": [
				{
					"url": "https://*"
				},
				{
					"url": "http://localhost:11434"
				}
			]
		},
		{
			"identifier": "http:allow-fetch-send",
			"allow": [
				{
					"url": "https://*"
				},
				{
					"url": "http://localhost:11434"
				}
			]
		},
		{
			"identifier": "http:allow-fetch-read-body",
			"allow": [
				{
					"url": "https://*"
				},
				{
					"url": "http://localhost:11434"
				}
			]
		}
	]
}
